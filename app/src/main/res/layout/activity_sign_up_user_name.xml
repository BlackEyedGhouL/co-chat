<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpUserName">

    <TextView
        android:id="@+id/su_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/cottorway_medium"
        android:text="@string/su_title"
        android:textColor="@color/primary_text"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/su_name_txt_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#EEEEEE"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/su_name_txt"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cottorway_medium"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textSize="17sp"
            android:maxLength="20"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:paddingVertical="17dp"
            android:hint="@string/su_name_txt"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/su_name_txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cottorway_medium"
        android:singleLine="true"
        android:text="@string/cu_name_txt_hint"
        android:textColor="@color/secondary_text"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/su_name_txt_field"
        app:layout_constraintTop_toBottomOf="@+id/su_name_txt_field" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/su_proceed"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:backgroundTintMode="screen"
        android:background="@drawable/btn_bg_proceed_disable"
        android:clickable="false"
        android:focusable="false"
        android:elevation="10dp"
        android:fontFamily="@font/cottorway_medium"
        android:foreground="@drawable/btn_proceed_ripple"
        android:padding="12dp"
        android:text="@string/su_proceed"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>