<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <TextView
        android:id="@+id/ch_received_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_bg"
        android:fontFamily="@font/cottorway_medium"
        android:padding="13dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/ch_received_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cottorway_medium"
        android:layout_marginTop="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch_received_message" />

</androidx.constraintlayout.widget.ConstraintLayout>